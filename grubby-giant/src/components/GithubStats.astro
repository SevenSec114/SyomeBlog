---
interface Props {
  username: string;
}
---

<div class="mt-8 mb-8">
  <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">GitHub Statistics</h3>
  <div class="bg-white dark:bg-gray-700 p-4 rounded-lg shadow">
    <div id="github-stats-container">
      <div id="github-stats-loading" class="flex justify-center items-center py-8">
        <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-indigo-600 dark:border-indigo-400"></div>
        <span class="ml-3 text-gray-600 dark:text-gray-300">Loading GitHub stats...</span>
      </div>
      
      <div id="github-stats-content" class="hidden">
      </div>
    </div>
  </div>
</div>

<script>
  import { loadGitHubStats } from "../utils/github-stats";

  if (typeof window !== 'undefined') {
    loadGitHubStats("{username}", "github-stats-container");
  }
</script>